import sys
sys.path.append('/home/JackrabbitAI/Library')
import os
import openai

import DecoratorFunctions as DF
import FileFunctions as FF

@DF.function_trapper
def GetOpenAI(model,role,input):
    # Read Tokens
    Tokens=FF.ReadTokens()

    clientAI=openai.OpenAI(api_key=Tokens['OpenAI'])
    completion=clientAI.chat.completions.create(
            model=model,
            messages=[ { "role":"system", "content": role },
                       { "role":"user",   "content": input } ]
        )
    clientAI.close()
    response=completion.choices[0].message.content.strip()
    return response

@DF.function_trapper
def main():
    if len(sys.argv)>2:
        model=sys.argv[1]
        role=sys.argv[2]
    else:
        print("A model and intructions must be supplied.")
        sys.exit(0)

    input=sys.stdin.read().replace('\n','\\n').replace('"',"'")

    response=GetOpenAI(model,role,input)
    print(response)

if __name__=='__main__':
    main()
